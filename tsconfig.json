{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "declaration": true,
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "outDir": "./lib",
    "strict": false,
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": { // 用于设置模块名到基于baseUrl的路径映射
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}